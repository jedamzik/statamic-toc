{
    "name": "jedamzik/statamic-toc",
    "description": "Auto-Generated Table Of Contents from Markdown Fields for Statamic 3.",
    "keywords": [
        "Statamic",
        "Table Of Contents"
    ],
    "type": "statamic-addon",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Njed\\Toc\\": "src"
        }
    },
    "authors": [
        {
            "name": "Nicholas Jedamzik",
            "email": "nicholas@njed.dev"
        }
    ],
    "require": {
        "php": "^8.0 | ^8.1",
        "statamic/cms": "^3.3 | ^4.0",
        "league/commonmark": "^2.3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.21",
        "orchestra/testbench": "^6.24.1 | ^7.4"
    },
 	"autoload-dev": {
    	"psr-4": {
      		"Njed\\Toc\\Tests\\": "Tests"
    	}
  	},
    "extra": {
        "download-dist": {
            "url": "https://github.com/jedamzik/statamic-toc/releases/download/{$version}/dist.tar.gz",
            "path": "resources/dist"
        },
        "statamic": {
            "name": "Toc",
            "description": "Auto-Generated Table Of Contents from Markdown Fields for Statamic 3."
        },
        "laravel": {
            "providers": [
                "Njed\\Toc\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
